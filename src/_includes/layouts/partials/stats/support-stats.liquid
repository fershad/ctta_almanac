<div id="support-stats">
    <h2 class="h2 loud">Support Team</h2>
    <div class="data-table">
        {% for person in persons.supporters %}
        <div class="data person">
                <div class="data-table-heading">
                    <div class="data-table-cell">Events</div>
                </div>
                <div class="data-table-cell name"><a href="/{{ locale }}/supporters/{{ person.name.en | slug }}" class="link">{{ person.name[locale] }}</a></div>
                <div class="data-table-row">
                    <div class="data-table-cell">{{ person.eventCount }}</div>
                </div>
            </div>
            {% endfor %}
    </div>
</div>