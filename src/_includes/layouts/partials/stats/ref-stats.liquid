<div id="ref-stats">
    <h2 class="h2 loud">Referees</h2>
    <div class="data-table">
        <table>
            <thead>
                <tr>
                    <th class="name"></th>
                    <th class="matches">Matches</th>
                </tr>
            </thead>
            <tbody>
            {% for ref in persons.referees %}
            {% unless ref.matchCount == 0 %}
                <tr>
                    <td class="name"><a href="/{{ locale }}/referees/{{ ref.name.en | slug }}" class="link">{{ ref.name[locale] }}</a></td>
                    <td class="matches">{{ ref.matchCount }}</td>
                </tr>
            {% endunless %}
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>